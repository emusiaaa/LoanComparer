@model InquiryModel
<form method="post" asp-action="Inquiry">
    <label asp-for="LoanValue">Loan Value</label>
    <input asp-for="LoanValue" />
    <label asp-for="InstallmentsCount">Number of installments</label>
    <input asp-for="InstallmentsCount" />
    <label asp-for="Client.UserFirstName">First Name</label>
    <input asp-for="Client.UserFirstName" />
    <label asp-for="Client.UserLastName">Last Name</label>
    <input asp-for="Client.UserLastName" />
    <label asp-for="Client.ClientJobType">Job type</label>
    <input asp-for="Client.ClientJobType" />
    <input type="submit" value="Submit inquiry" />
</form>